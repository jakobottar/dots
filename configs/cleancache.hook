# /etc/pacman.d/hooks/cleancache.hook
# TODO: update with https://gist.github.com/luukvbaal/2c697b5e068471ee989bff8a56507142

[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
Description = Cleaning Pacman Cache...
When = PostTransaction
Exec = /usr/bin/paccache -rk1 && /usr/bin/paccache -ruk0 
