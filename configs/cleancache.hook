# /etc/pacman.d/hooks/cleancache.hook

[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
Description = Cleaning Pacman Cache...
When = PostTransaction
Exec = /usr/bin/paccache -rk1 && /usr/bin/paccache -ruk0 && /usr/bin/paccache -rk1 -c /home/jakobj/.cache/yay/*/ && /usr/bin/paccache -ruk0 /home/jakobj/.cache/yay/*/


